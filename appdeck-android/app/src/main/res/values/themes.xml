<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyAppDeckTheme" parent="Theme.AppDeckTheme">
        <!-- Set AppCompatâ€™s actionBarStyle -->
        <!--<item name="actionBarStyle">@style/MyActionBarStyle</item>-->

        <item name="android:textColorPrimary">@color/AppDeckColorTopBarText</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/AppDeckColorTopBarBg1</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/AppDeckColorTopBarBg2</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/AppDeckColorApp</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@color/AppDeckColorTopBarText</item>
        <item name="android:colorControlNormal">@color/AppDeckColorApp</item>
        <item name="android:colorControlHighlight">@color/AppDeckColorApp</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/AppDeckColorTopBarText</item>
    </style>

</resources>