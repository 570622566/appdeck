<resources>
    <style name="Theme.MyAppDeckTheme" parent="Theme.AppDeckTheme">
        <!-- Set AppCompatâ€™s actionBarStyle -->
        <!--<item name="actionBarStyle">@style/MyActionBarStyle</item>-->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/AppDeckColorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/AppDeckColorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/AppDeckColorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@color/AppDeckControlNormal</item>
        <item name="android:colorControlNormal">@color/AppDeckControlNormal</item>
        <item name="android:colorControlHighlight">@color/AppDeckControlNormal</item>


        <!-- The rest of your attributes -->
    </style>
